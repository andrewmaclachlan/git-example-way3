journal = {Annals of the Association of American Geographers},
keywords = {climate change,decision making under uncertainty,planning paradigm,simulation modeling,water resource management.},
number = {2},
pages = {356--372},
title = {{Water Planning Under Climatic Uncertainty in Phoenix : Why We Need a New Paradigm in Phoenix : Why We Need a New Paradigm}},
url = {http://dx.doi.org/10.1080/00045601003595420},
volume = {100},
