doi = {10.5589/m09-015},
file = {:C$\backslash$:/Users/ucfnmac/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Goodwin et al. - 2009 - Characterizing urban surface cover and structure with airborne lidar technology.pdf:pdf},
isbn = {1712-7971},
issn = {17127971},
journal = {Canadian Journal of Remote Sensing},
number = {3},
pages = {297--309},
title = {{Characterizing urban surface cover and structure with airborne lidar technology}},
